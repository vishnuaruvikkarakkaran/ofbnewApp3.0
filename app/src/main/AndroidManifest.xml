<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.enfin.ofabee3">
    <!-- The following declaration enables this module to be served instantly -->
    <dist:module dist:instant="true" /> <!-- Normal permissions ! -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- Dangerous permissions ! -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:xlargeScreens="true" />

    <application
        android:name=".MainApplicationClass"
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:replace="android:allowBackup">
        <activity
            android:name=".ui.module.inactiveuser.InActiveUserActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".utils.errorhandler.ServerIsBrokenActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".ui.module.bundlesubject.BundleSubjectActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HomeScreenTheme" />
        <activity
            android:name=".ui.module.orderpreview.OrderPreviewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HomeScreenTheme" />
        <activity
            android:name=".ui.module.freepreview.FreePreviewActivity"
            android:launchMode="singleTop"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ui.module.coursedetail.bundledetails.BundleDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HomeScreenTheme" />
        <activity
            android:name=".ui.module.Payment.PaymentActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HomeScreenTheme" />
        <activity
            android:name=".ui.module.coursedetail.TabsHeaderActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CourseDetailScreenTheme">
            <intent-filter android:label="Ofabee">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "https://testing-ofabee.enfinlabs.com” -->
                <data
                    android:host="testing-ofabee.enfinlabs.com"
                    android:pathPrefix="/*"
                    android:scheme="https" />
                <!-- note that the leading "/" is required for pathPrefix -->
            </intent-filter>
            <intent-filter android:label="Ofabee">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "http://testing-ofabee.enfinlabs.com” -->
                <data
                    android:host="testing-ofabee.enfinlabs.com"
                    android:scheme="http" />
            </intent-filter>
            <intent-filter android:label="NeyyarAcademy">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "http://neyyaracademy.com” -->
                <data
                    android:host="neyyaracademy1.com"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.module.coursedetail.CourseDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HomeScreenTheme" />
        <activity
            android:name=".ui.module.home.guesthome.GuestHomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HomeScreenTheme" />
        <activity
            android:name=".ui.module.featuredcourses.FeaturedCoursesListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HomeScreenTheme" />
        <activity
            android:name=".ui.module.popularcourseslist.PopularCoursesListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HomeScreenTheme" />
        <activity
            android:name=".ui.module.nointernet.NoInternetActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/NoInternetTheme" />
        <activity android:name=".ui.module.testpackage.TestActivity" />
        <activity
            android:name=".ui.module.contentdelivery.ContentDeliveryActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait" /> <!-- <activity android:name=".base.BaseActivity" /> -->
        <activity
            android:name=".ui.module.otp.OtpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.module.forgotpassword.ForgotPasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.module.inapp.PurchaseActivity"
            android:screenOrientation="portrait" /> <!-- Home Screen Activity -->
        <activity
            android:name=".ui.module.home.HomeActivity"
            android:excludeFromRecents="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/home_searchable" />
        </activity> <!-- Splash Screen Activity -->

        <activity
            android:name=".ui.module.warmstartuplauncher.WarmStartupLauncherActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashBgTheme">
        </activity>

        <activity
            android:name=".ui.module.splash.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!--
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/*" />
            </intent-filter>
            -->

        </activity> <!-- Registration Activity -->
        <activity
            android:name=".ui.module.registration.RegistrationActivity"
            android:screenOrientation="portrait" /> <!-- Login Activity -->
        <activity
            android:name=".ui.module.login.LoginActivity"
            android:launchMode="singleTask"
            android:resizeableActivity="false"
            android:screenOrientation="portrait" /> <!-- Reset Password Activity -->
        <activity
            android:name=".ui.module.passwordreset.ResetPasswordActivity"
            android:launchMode="singleTask"
            android:resizeableActivity="false"
            android:screenOrientation="portrait" /> <!-- Registration Activity -->
        <activity
            android:name=".ui.module.coursecategories.MyCourseCategoryListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.thefinestartist.finestwebview.FinestWebViewActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/FinestWebViewTheme.Light" /> <!-- Receivers -->
        <receiver
            android:name=".receivers.SMSBroadcastReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.android.gms.auth.api.phone.SMS_RETRIEVED" />
            </intent-filter>
        </receiver>
        <!--<receiver android:name=".utils.networkmonitor.NetworkMonitor">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>-->
    </application>

</manifest>