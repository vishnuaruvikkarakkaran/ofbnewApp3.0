<resources>

    <style name="MaterialAppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        ...
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!-- Splash theme. -->
    <style name="NoActionbarTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <!-- Transparent theme. -->
    <style name="Theme.Transparent" parent="MaterialAppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="NoInternetTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="SplashBgTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:statusBarColor">@color/homeNavigationBarColor</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:colorAccent">@color/homeNavigationBarColor</item>
    </style>

    <style name="ProgressTheme" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@drawable/spinner_holo_light</item>
        <item name="android:animationResolution">33</item>
    </style>


    <style name="categoryCheckboxTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">#000000</item>
        <!-- normal border color change as you wish -->
        <item name="colorControlActivated">#33b560</item>
        <!-- activated color change as you wish -->
        <item name="android:textColor">#000000</item>
        <!-- checkbox text color -->
    </style>

    <style name="HomeScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/homeColorPrimary</item>
        <item name="colorPrimaryDark">@color/homeColorPrimary</item>
        <item name="android:navigationBarColor">@color/homeNavigationBarColor</item>
        <item name="android:windowBackground">@color/color_off_white</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
    </style>

    <style name="CourseDetailScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/homeColorBg</item>
        <item name="colorPrimaryDark">@color/homeColorPrimary</item>
        <item name="android:navigationBarColor">@color/homeColorPrimary</item>
        <item name="android:windowBackground">@color/homeColorBg</item>
    </style>

    <style name="ColorSwitchStyle">
        <item name="colorControlActivated">@color/homeNavigationBarColor</item>
        <!-- Inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorGrey</item>
        <!-- Inactive track color(30% transparency) -->
        <item name="android:colorForeground">@color/colorGrey</item>
    </style>

    <style name="RatingBarSmallCustomPopularCourse" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorGrey</item>
        <item name="colorControlActivated">@color/quantum_yellow700</item>
    </style>

    <style name="RatingBarSmallCustomFeaturedCourse" parent="Theme.AppCompat">
        <item name="colorControlNormal">#323232</item>
        <item name="colorControlActivated">@color/quantum_yellow700</item>
    </style>

    <style name="RatingBarSmallCustomCourseDetail" parent="Theme.AppCompat">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">@color/colorWhite</item>
    </style>

    <style name="LoginEditTextTheme">
        <item name="android:singleLine">true</item>
        <item name="colorControlNormal">@color/finestGray</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
    </style>

    <style name="LoginEditText">
        <item name="android:theme">@style/LoginEditTextTheme</item>
        <item name="android:paddingTop">4dp</item>
    </style>

