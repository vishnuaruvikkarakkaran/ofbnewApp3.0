<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/Space_2"
    android:background="@color/colorWhite"
    android:orientation="horizontal"
    android:padding="0dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/Space_3"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/course_category_bottom_border"
        android:paddingTop="@dimen/Space_5"
        android:paddingBottom="@dimen/Space_10"
        android:weightSum="1">

        <ImageView
            android:id="@+id/ic_course_category"
            android:layout_width="0dp"
            android:layout_height="@dimen/Space_25"
            android:layout_gravity="start|center_vertical"
            android:layout_weight="0.2"
            android:visibility="gone"
            android:src="@drawable/ic_no_course" />

        <TextView
            android:id="@+id/text_course_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="start|center_vertical"
            app:fontFamily="@font/opensans_semibold"
            android:text="Personal Development"
            android:textSize="@dimen/text_16"
            android:textColor="@color/colorBlack" />

        <CheckBox
            android:id="@+id/cb_course_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:layout_gravity="end|center_vertical"
            android:gravity="end|center_vertical"
            android:theme="@style/categoryCheckboxTheme" />

    </LinearLayout>


</LinearLayout>