<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@color/userProfileColorBg"
    android:layout_margin="@dimen/Space_2"
    android:orientation="vertical"
    android:padding="0dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/userProfileColorBg"
        android:orientation="horizontal"
        android:padding="@dimen/Space_0"
        android:weightSum="1">

        <com.enfin.ofabee3.utils.OpenSansTextView
            android:id="@+id/settings_item_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/Space_20"
            android:layout_weight="0.8"
            android:maxLines="2"
            android:gravity="center_vertical|start"
            android:text="The Complete financial analyst combo course - 2019"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_14"
            android:textStyle="normal" />

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="center_vertical|end"
            android:theme="@style/ColorSwitchStyle" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/Space_10"
        android:layout_marginBottom="@dimen/Space_10"
        android:background="@color/userProfileDividerColorBg"/>


</LinearLayout>