<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragmentContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/editProfileColorBg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/editProfileColorBg"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/user_details_ll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:background="@drawable/user_profile_bg"
            android:gravity="center"
            android:orientation="vertical">

            <!--<com.enfin.ofabee3.utils.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/Space_0"
                android:elevation="20dp"
                android:outlineAmbientShadowColor="@color/color_off_white"
                android:outlineSpotShadowColor="@color/color_off_white"
                android:src="@drawable-mdpi/man"
                app:civ_border_color="@color/color_off_white"
                app:civ_border_width="2dp" />-->

            <FrameLayout
                android:id="@+id/fl_profile_image"
                android:layout_width="@dimen/Space_100"
                android:layout_height="@dimen/Space_100">

                <com.enfin.ofabee3.utils.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="@dimen/Space_100"
                    android:layout_height="@dimen/Space_100"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/Space_0"
                    android:elevation="10dp"
                    android:outlineAmbientShadowColor="@color/color_off_white"
                    android:outlineSpotShadowColor="@color/color_off_white"
                    android:src="@drawable/man"
                    app:civ_border_color="@color/color_off_white"
                    app:civ_border_width="2dp" />

                <com.enfin.ofabee3.utils.CircleImageView
                    android:id="@+id/iv_upload"
                    android:layout_width="@dimen/Space_23"
                    android:layout_height="@dimen/Space_23"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="@dimen/Space_5"
                    android:background="@drawable/ic_upload_bg"
                    android:elevation="@dimen/Space_30"
                    android:padding="@dimen/Space_3"
                    android:src="@drawable/ic_upload" />

            </FrameLayout>


            <com.enfin.ofabee3.utils.OpenSansTextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/Space_10"
                android:gravity="center"
                android:padding="5dp"
                android:text="Hi John!"
                android:textColor="@color/color_off_white"
                android:textSize="@dimen/text_16" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/settings_ll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/Space_20"
            android:layout_weight="1.3"
            android:orientation="vertical">

            <com.enfin.ofabee3.utils.OpenSansTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|start"
                android:paddingStart="@dimen/Space_2"
                android:text="Name"
                android:textColor="@color/editProfileTextColor"
                android:textSize="@dimen/Space_10" />

            <EditText
                android:id="@+id/name_ti_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorGrey"
                android:gravity="center_vertical|start"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:text="John Mathew"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_14"
                app:fontFamily="@font/opensans_regular" />

            <TextView
                android:id="@+id/name_error_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_regular"
                android:text="Invalid Name"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/text_10"
                android:textStyle="normal"
                android:visibility="gone" />

            <com.enfin.ofabee3.utils.OpenSansTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/Space_20"
                android:gravity="center_vertical|start"
                android:paddingStart="@dimen/Space_2"
                android:text="Phone Number"
                android:textColor="@color/editProfileTextColor"
                android:textSize="@dimen/Space_10" />

            <EditText
                android:id="@+id/phone_ti_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/editProfileColorBg"
                android:enabled="false"
                android:gravity="center_vertical|start"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:text="+91 9700000000"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_14"
                app:fontFamily="@font/opensans_regular" />


            <com.enfin.ofabee3.utils.OpenSansTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/Space_20"
                android:gravity="center_vertical|start"
                android:paddingStart="@dimen/Space_2"
                android:text="Email Address"
                android:textColor="@color/editProfileTextColor"
                android:textSize="@dimen/Space_10" />


            <EditText
                android:id="@+id/email_ti_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/editProfileColorBg"
                android:enabled="false"
                android:gravity="center_vertical|start"
                android:singleLine="true"
                android:text="john@xyz.com"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_14"
                app:fontFamily="@font/opensans_regular" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>