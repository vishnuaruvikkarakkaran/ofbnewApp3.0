<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.enfin.ofabee3.utils.errorhandler.ServerIsBrokenActivity">

    <ImageView
        android:layout_width="@dimen/Space_150"
        android:layout_height="@dimen/Space_100"
        android:layout_marginBottom="@dimen/Space_10"
        android:gravity="center"
        android:src="@drawable/ic_no_data"
        app:layout_constraintBottom_toTopOf="@id/error_label_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/error_label_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenir_medium"
        android:gravity="center"
        android:text="OOPS!!"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/text_22"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/Space_20"
        android:layout_marginTop="@dimen/Space_10"
        android:layout_marginEnd="@dimen/Space_20"
        android:layout_marginBottom="@dimen/Space_30"
        android:fontFamily="@font/opensans_semibold"
        android:gravity="center"
        android:text="Your Account has been temporarily deactivated. Please contact Admin for activation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/error_label_tv" />

    <Button
        android:id="@+id/exit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Exit"
        android:textColor="@color/color_off_white"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
