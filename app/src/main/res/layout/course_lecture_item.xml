<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/Space_0"
    android:layout_marginTop="@dimen/Space_0"
    android:layout_marginEnd="@dimen/Space_0"
    android:layout_marginBottom="@dimen/Space_0"
    android:background="@color/colorWhite"
    android:elevation="0dp"
    android:orientation="vertical"
    android:padding="@dimen/Space_0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/Space_10"
        android:layout_marginBottom="@dimen/Space_10"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="1">

        <TextView
            android:id="@+id/course_lecture_index"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/Space_0"
            android:layout_weight="0.1"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center"
            android:maxLength="3"
            android:minEms="3"
            android:text="1"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_12" />

        <androidx.cardview.widget.CardView
            android:id="@+id/parent_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/Space_0"
            android:layout_weight="0.3"
            android:background="@android:color/white"
            app:cardCornerRadius="2dp">

            <FrameLayout
                android:id="@+id/course_thumbnail_fl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/course_thumbnail"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="0dp"
                        app:layout_constraintDimensionRatio="H,83:53"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/course_sample_" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <FrameLayout
                    android:id="@+id/lock_fl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha=".5"
                    android:background="@color/colorBlack"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="@dimen/Space_20"
                        android:layout_height="@dimen/Space_20"
                        android:layout_gravity="center"
                        android:alpha="1"
                        android:src="@drawable/ic_locked"
                        android:visibility="visible" />

                </FrameLayout>

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/ll_body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/Space_0"
            android:layout_marginRight="@dimen/Space_0"
            android:layout_weight="0.6"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/course_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/Space_10"
                android:layout_marginTop="@dimen/Space_0"
                android:layout_marginEnd="@dimen/Space_10"
                android:layout_marginBottom="@dimen/Space_0"
                android:ellipsize="end"
                android:fontFamily="@font/opensans_semibold"
                android:gravity="start"
                android:maxLines="2"
                android:text="VEO ലിസ്റ്റില്‍ കയറാൻ മലയാളം"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_12"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginStart="@dimen/Space_0"
                android:layout_marginTop="@dimen/Space_0">

                <TextView
                    android:id="@+id/preview_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/Space_10"
                    android:fontFamily="@font/opensans_semibold"
                    android:gravity="end|bottom"
                    android:padding="@dimen/Space_0"
                    android:text="PREVIEW"
                    android:textColor="#639fd3"
                    android:textSize="@dimen/Space_9" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view_div_header"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_child_header"
        android:background="#e5e5e5" />

</LinearLayout>