<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/Space_2"
    android:background="@color/colorWhite"
    android:orientation="horizontal"
    android:padding="0dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/Space_3"
        android:background="@drawable/course_category_bottom_border"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="@dimen/Space_5"
        android:paddingBottom="@dimen/Space_10"
        android:weightSum="1">

        <ImageView
            android:id="@+id/ic_course_category"
            android:layout_width="0dp"
            android:layout_height="@dimen/Space_25"
            android:layout_gravity="start|center_vertical"
            android:layout_weight="0.2"
            android:src="@drawable/ic_no_course"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_course_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:gravity="start|center_vertical"
            android:text="Personal Development"
            android:textColor="#7B7B7B"
            android:textSize="@dimen/text_14"
            app:fontFamily="@font/opensans_semibold" />

        <CheckBox
            android:id="@+id/rb_course_category"
            android:layout_width="0dp"
            android:layout_height="@dimen/Space_20"
            android:layout_gravity="end|center_vertical"
            android:layout_weight="0.1"
            android:gravity="end|center_vertical"
            android:scaleX=".6"
            android:clickable="false"
            android:scaleY=".6"
            android:theme="@style/categoryCheckboxTheme" />

    </LinearLayout>


</LinearLayout>