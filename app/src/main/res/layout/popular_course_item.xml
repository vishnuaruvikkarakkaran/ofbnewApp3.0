<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/Space_5"
    android:layout_marginStart="@dimen/Space_5"
    android:layout_marginEnd="@dimen/Space_5"
    android:layout_marginBottom="@dimen/Space_0"
    android:background="@drawable/round_edge_layout_bg_popular_courses"
    android:elevation="0dp"
    android:orientation="horizontal"
    android:padding="@dimen/Space_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/Space_0"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="1">

        <androidx.cardview.widget.CardView
            android:id="@+id/parent_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/Space_2"
            android:layout_weight="0.4"
            android:elevation="@dimen/Space_0"
            android:background="@android:color/white"
            app:cardCornerRadius="2dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/course_thumbnail"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="0dp"
                        app:layout_constraintDimensionRatio="H,16:9"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_logo" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.65"
                    android:background="@color/colorBlack"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/Space_40"
                        android:layout_height="@dimen/Space_40"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_play_circle_outline_white_24dp"
                        android:visibility="gone" />

                </FrameLayout>

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/Space_0"
            android:layout_marginRight="@dimen/Space_5"
            android:layout_weight="0.6"
            android:gravity="center"
            android:orientation="vertical">

            <com.enfin.ofabee3.utils.OpenSansTextView
                android:id="@+id/course_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/Space_12"
                android:layout_marginTop="@dimen/Space_2"
                android:layout_marginEnd="@dimen/Space_5"
                android:layout_marginBottom="@dimen/Space_2"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_13"
                android:textStyle="normal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/Space_15"
                android:layout_marginTop="@dimen/Space_2"
                android:layout_marginBottom="@dimen/Space_2"
                android:layout_marginEnd="@dimen/Space_0"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/iv_label"
                    android:layout_width="@dimen/Space_10"
                    android:layout_height="@dimen/Space_10"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_bookmark" />

                <com.enfin.ofabee3.utils.OpenSansTextView
                    android:id="@+id/category_tv"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_label"
                    android:fontFamily="@font/opensans_regular"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/Space_5"
                    android:paddingEnd="@dimen/Space_5"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/text_10" />

                <com.enfin.ofabee3.utils.AvenirButton
                    android:id="@+id/is_bundle_button"
                    android:layout_width="@dimen/Space_60"
                    android:layout_height="@dimen/Space_12"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/course_bundle_label_bg"
                    android:fontFamily="@font/opensans_regular"
                    android:gravity="center"
                    android:paddingStart="@dimen/Space_1"
                    android:paddingEnd="@dimen/Space_1"
                    android:text="Combo Course"
                    android:textAllCaps="false"
                    android:textColor="@color/color_off_white"
                    android:textSize="@dimen/text_7"
                    android:visibility="invisible" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/Space_20"
                android:layout_marginStart="@dimen/Space_0"
                android:layout_marginTop="@dimen/Space_2"
                android:layout_marginEnd="@dimen/Space_0"
                android:layout_marginBottom="@dimen/Space_2"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/Space_0"
                        android:layout_weight="1">

                        <androidx.appcompat.widget.AppCompatRatingBar
                            android:id="@+id/course_rating_bar"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:padding="1dp"
                            android:rating="0"
                            android:scaleX="0.7"
                            android:scaleY="0.7"
                            android:stepSize="0.5"
                            android:theme="@style/RatingBarSmallCustomPopularCourse" />

                    </LinearLayout>

                    <com.enfin.ofabee3.utils.OpenSansTextView
                        android:id="@+id/course_rating_count"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/Space_5"
                        android:layout_marginLeft="@dimen/Space_5"
                        android:layout_weight="0"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="(123)"
                        android:textColor="@color/colorBlack"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical|end">

                    <com.enfin.ofabee3.utils.OpenSansTextView
                        android:id="@+id/course_old_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/Space_2"
                        android:background="@drawable/strike_through"
                        android:fontFamily="@font/opensans_regular"
                        android:text=""
                        android:textStyle="bold"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/text_10" />

                    <com.enfin.ofabee3.utils.OpenSansTextViewBold
                        android:id="@+id/course_new_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/Space_5"
                        android:fontFamily="@font/opensans_regular"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_13"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>