<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/homeColorPrimaryDark"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:visibility="gone"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:dividerPadding="8dp"
            android:orientation="horizontal"
            android:showDividers="end">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/toolbar_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/album_ic_back_white" />

            <TextView
                android:id="@+id/toolbar_title"
                style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:drawablePadding="0dp"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center_vertical"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:text="Course"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite" />

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/Space_0"
        android:elevation="0dp"
        android:orientation="horizontal"
        android:padding="@dimen/Space_0">

        <LinearLayout
            android:id="@+id/parent_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--INITIAL VALUE =300 & 100 !-->

            <ImageView
                android:id="@+id/htab_header"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/user_profile_bg"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

            <View
                android:id="@+id/htab_footer"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/homeColorBg" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/header_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/Space_10"
            android:layout_marginTop="@dimen/Space_10"
            android:layout_marginEnd="@dimen/Space_10"
            android:layout_marginBottom="@dimen/Space_10"
            android:background="@drawable/round_edge_layout_bg_course_detail_header"
            android:elevation="@dimen/Space_5"
            android:orientation="vertical"
            android:padding="@dimen/Space_0"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/Space_0"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="1">

                <androidx.cardview.widget.CardView
                    android:id="@+id/parent_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-3dp"
                    android:background="@android:color/white"
                    android:visibility="visible"
                    app:cardCornerRadius="3dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <!--<com.enfin.ofabee3.utils.RoundRectCornerImageView
                            android:id="@+id/course_thumbnail"
                            android:layout_width="match_parent"
                            android:layout_height="220dp"
                            android:scaleType="fitXY"
                            android:adjustViewBounds="true"
                            android:background="@drawable-mdpi/course_detail_sample_header" />-->

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.enfin.ofabee3.utils.RoundRectCornerImageView
                                android:id="@+id/course_header_image"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_marginStart="0dp"
                                android:layout_marginTop="0dp"
                                android:layout_marginEnd="0dp"
                                android:scaleType="fitXY"
                                app:layout_constraintDimensionRatio="H,16:9"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="bottom"
                                    android:background="@drawable/featured_gradient_drawable_top">

                                    <TextView
                                        android:id="@+id/tv_course_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center_vertical"
                                        android:layout_margin="@dimen/Space_10"
                                        android:fontFamily="@font/opensans_semibold"
                                        android:gravity="start"
                                        android:maxLines="2"
                                        android:text=""
                                        android:textColor="@color/colorWhite"
                                        android:textSize="@dimen/text_18"
                                        android:textStyle="normal" />

                                </FrameLayout>

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/Space_100"
                                    android:layout_gravity="bottom"
                                    android:alpha="1"
                                    android:background="@drawable/featured_gradient_drawable"
                                    android:visibility="visible">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom"
                                        android:gravity="center_vertical">

                                        <LinearLayout
                                            android:id="@+id/ll_rating"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">

                                            <androidx.appcompat.widget.AppCompatRatingBar
                                                android:id="@+id/course_rating_bar"
                                                android:layout_width="wrap_content"
                                                android:layout_height="45dp"
                                                android:layout_gravity="start|bottom"
                                                android:layout_marginStart="-60dp"
                                                android:layout_marginTop="10dp"
                                                android:layout_marginEnd="-50dp"
                                                android:isIndicator="true"
                                                android:numStars="5"
                                                android:progressBackgroundTint="@color/colorWhite"
                                                android:progressTint="@color/quantum_yellow700"
                                                android:rating="0"
                                                android:scaleX="0.4"
                                                android:scaleY="0.4"
                                                android:secondaryProgressTint="@color/colorWhite"
                                                android:stepSize="0.5" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/ll_validity"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_toRightOf="@id/ll_rating"
                                            android:gravity="center_vertical"
                                            android:orientation="vertical"
                                            android:paddingLeft="@dimen/Space_0"
                                            android:visibility="visible">

                                            <TextView
                                                android:id="@+id/validity_tv"
                                                android:layout_width="wrap_content"
                                                android:layout_height="45dp"
                                                android:layout_marginTop="@dimen/Space_10"
                                                android:drawableLeft="@drawable/ic_clock"
                                                android:drawablePadding="@dimen/Space_5"
                                                android:fontFamily="@font/opensans_semibold"
                                                android:gravity="center"
                                                android:text=""
                                                android:textColor="@color/colorWhite"
                                                android:textSize="@dimen/text_12" />

                                        </LinearLayout>

                                        <ImageView
                                            android:id="@+id/iv_share"
                                            android:layout_width="35dp"
                                            android:layout_height="35dp"
                                            android:layout_alignBaseline="@+id/ll_validity"
                                            android:layout_alignParentRight="true"
                                            android:layout_marginTop="@dimen/Space_10"
                                            android:layout_marginEnd="@dimen/Space_10"
                                            android:padding="@dimen/Space_0"
                                            android:src="@drawable/ic_share_white_bg" />

                                    </RelativeLayout>

                                </FrameLayout>

                            </FrameLayout>

                        </LinearLayout>

                    </FrameLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_edge_layout_bg_course_detail_header">

                <LinearLayout
                    android:id="@+id/ll_price_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/Space_10"
                    android:layout_marginTop="@dimen/Space_10"
                    android:layout_marginEnd="@dimen/Space_10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.8"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/Space_0">

                            <TextView
                                android:id="@+id/course_discount_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="bottom"
                                android:padding="@dimen/Space_0"
                                android:paddingStart="@dimen/Space_5"
                                android:paddingEnd="@dimen/Space_0"
                                android:text=""
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_22" />

                            <TextView
                                android:id="@+id/asterik_tv"
                                android:layout_width="10dp"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/opensans_semibold"
                                android:text="\u002A"
                                android:textColor="@color/colorBlack" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/course_actual_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/Space_10"
                            android:background="@drawable/strike_through_grey"
                            android:fontFamily="@font/opensans_semibold"
                            android:gravity="bottom"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/colorGrey"
                            android:textSize="@dimen/text_18"
                            android:visibility="visible" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:gravity="center_vertical|end">

                        <TextView
                            android:id="@+id/course_discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/Space_0"
                            android:background="@drawable/course_discount_label_bg"
                            android:fontFamily="@font/opensans_regular"
                            android:gravity="center"
                            android:paddingLeft="@dimen/Space_5"
                            android:paddingRight="@dimen/Space_5"
                            android:text=""
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_12"
                            android:textStyle="bold" />

                        <com.enfin.ofabee3.utils.OpenSansTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/Space_2"
                            android:background="@drawable/strike_through"
                            android:fontFamily="@font/opensans_regular"
                            android:text=""
                            android:textColor="@color/colorGrey"
                            android:textSize="@dimen/text_20"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_coupon_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_price_layout"
                    android:layout_marginStart="@dimen/Space_10"
                    android:layout_marginEnd="@dimen/Space_10"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/inclusive_tax_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/opensans_semibold"
                        android:gravity="start|top"
                        android:text=""
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/text_10" />

                    <TextView
                        android:id="@+id/have_coupon_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/Space_5"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="end|bottom"
                        android:text="Have Coupon ?"
                        android:textColor="#247bc2"
                        android:visibility="invisible" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/apply_coupon_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_coupon_layout"
                    android:layout_marginStart="@dimen/Space_10"
                    android:layout_marginTop="@dimen/Space_10"
                    android:layout_marginEnd="@dimen/Space_10"
                    android:background="@drawable/course_preview_bg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/Space_0"
                    android:visibility="gone"
                    android:weightSum="1">

                    <EditText
                        android:id="@+id/et_coupon_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginStart="@dimen/Space_10"
                        android:layout_weight="0.9"
                        android:backgroundTint="@color/colorWhite"
                        android:ellipsize="end"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="start|center_vertical"
                        android:hint="Enter coupon"
                        android:maxLength="13"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="#444444"
                        android:textColorHint="@color/colorGrey"
                        android:textSize="@dimen/text_16" />

                    <Button
                        android:id="@+id/apply_button"
                        android:layout_width="60dp"
                        android:layout_height="@dimen/Space_30"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/Space_10"
                        android:layout_marginEnd="@dimen/Space_10"
                        android:layout_weight="0.1"
                        android:background="@drawable/round_edge_apply_button_bg"
                        android:fontFamily="@font/opensans_semibold"
                        android:gravity="center"
                        android:text="APPLY"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_14" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/applied_coupon_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/apply_coupon_ll"
                    android:layout_marginStart="@dimen/Space_10"
                    android:layout_marginTop="@dimen/Space_10"
                    android:layout_marginEnd="@dimen/Space_10"
                    android:gravity="start"
                    android:orientation="vertical"
                    android:padding="@dimen/Space_2"
                    android:visibility="gone"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/Space_10"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/opensans_extrabold"
                            android:text="Price"
                            android:textColor="@color/colorBlack" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_extrabold"
                            android:gravity="end"
                            android:text="₹ 5000"
                            android:textColor="@color/colorBlack" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/Space_10"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/opensans_extrabold"
                            android:text="Coupon Discount"
                            android:textColor="@color/colorBlack" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center_vertical"
                            android:drawableStart="@drawable/ic_close_no_bg"
                            android:fontFamily="@font/opensans_extrabold"
                            android:gravity="center"
                            android:paddingStart="@dimen/Space_10"
                            android:text="Remove"
                            android:textColor="#247bc2"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_extrabold"
                            android:gravity="end"
                            android:text="-₹ 900"
                            android:textColor="#42BD09" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/Space_10"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/opensans_extrabold"
                            android:text="Total amount"
                            android:textColor="@color/colorBlack" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_extrabold"
                            android:gravity="end"
                            android:text="₹ 4100"
                            android:textColor="@color/colorBlack" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="@dimen/Space_10"
                        android:background="@drawable/dash_view_bg" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/dash_view_bg" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/buyNowButton_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/applied_coupon_ll"
                    android:layout_marginStart="@dimen/Space_10"
                    android:layout_marginTop="@dimen/Space_10"
                    android:layout_marginEnd="@dimen/Space_10"
                    android:background="@drawable/course_buy_now_bg"
                    android:gravity="center">

                    <com.enfin.ofabee3.utils.AvenirButton
                        android:id="@+id/buyNowButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:drawableRight="@drawable/ic_arrow_right"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:text="Buy Now"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_16" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/previewButton_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/buyNowButton_rl"
                    android:layout_marginStart="@dimen/Space_10"
                    android:layout_marginTop="@dimen/Space_10"
                    android:layout_marginEnd="@dimen/Space_10"
                    android:layout_marginBottom="@dimen/Space_10"
                    android:background="@drawable/course_preview_bg"
                    android:gravity="center">

                    <com.enfin.ofabee3.utils.AvenirButton
                        android:id="@+id/previewButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center"
                        android:text="Free Preview"
                        android:textAllCaps="false"
                        android:textColor="#247bc2"
                        android:textSize="@dimen/text_16"
                        android:visibility="gone" />

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>