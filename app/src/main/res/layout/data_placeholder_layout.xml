<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="20dp">

    <View
        android:id="@+id/thumbnail"
        android:layout_width="@dimen/placeholderImage"
        android:layout_height="@dimen/placeholderImage"
        android:layout_marginTop="@dimen/Space_0"
        android:layout_marginRight="@dimen/activityPadding"
        android:background="@color/background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/Space_0"
        android:layout_toRightOf="@id/thumbnail"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/placeholderTextHeight"
            android:layout_marginEnd="@dimen/Space_50"
            android:background="@color/background" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/placeholderTextHeight"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/Space_150"
            android:background="@color/background" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/placeholderTextHeight"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/Space_200"
            android:background="@color/background" />

    </LinearLayout>

</RelativeLayout>